<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Reviewer name</th>
      <th>Rating</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.reviewer_name %></td>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>

        <td><%= link_to 'Show', [review.restaurant, review] %></td>
        <td><%= link_to 'Edit', edit_restaurant_review_path(review.restaurant, review) %></td>
        <td><%= link_to 'Destroy', [review.restaurant, review], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_restaurant_review_path %>

<%= link_to 'Back to restaurants', restaurants_path %>
<%= link_to 'Back', :back %>



